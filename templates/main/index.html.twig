{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Site e-Commerce</h1>
            <p>Bienvenue dans notre boutique</p>
        </div>
        {% for category in categories %}
            {% if category.parent == null %}
                <div class="col-12">
                    <h2>{{ category.name }}</h2>
                </div>
            {% else %}
                <div class="col-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h3 class="card-title text-center">{{ category.name }}</h3>
                            <a href="{{ path('app_categories_list', {slug: category.slug}) }}" class="btn btn-primary w-75 mx-auto mt-3">Voir les produits</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </section>
</main>

{% endblock %}