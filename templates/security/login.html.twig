{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="cibtauber my-3 p-3 w-25 border border-primary rounded bg-light">
    <div class="row">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}<a class="btn btn-primary mt-3" href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                    {% else %}
                    <h1 class="h3 mb-3 font-weight-normal">Merci de vous identifier</h1>
                    <label for="inputEmail">E-mail</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50" autocomplete="email" required autofocus>
                    <label for="inputPassword" class="mt-2">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control w-50" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.htm
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>
                    #}
                    <button class="btn btn-lg btn-primary mt-3" type="submit">
                        Connexion
                    </button>
                {% endif %}
            </form>
        </div>
    </div>
</section>
{% endblock %}
